@import '00_variables.styl'
@import 'nib'

#volume
    position relative
    user-select none
    display none
    margin 0 15px

.show-volume #volume
    display block

.vol-val
    position absolute
    top 17px
    left 0
    height 2px
    background $vacay
    pointer-events none

input[type='range']::-moz-range-track
    outline none
    border none
    margin 0
    padding 0
    display block
    background $border

input[type='range']
    -webkit-appearance none
    width 100%
    height 35px
    background linear-gradient(to right, $border 0%, $border 100%)
    background-size 100% 2px
    background-position center
    background-repeat no-repeat
    outline none
    border none
    margin 0
    padding 0
    display block
    &::-webkit-slider-thumb
        -webkit-appearance none
        width 10px
        height 10px
        border-radius 50%
        background white
        position relative
        z-index 3
        transition all 0.18s ease
    &::-moz-range-thumb
        width 10px
        height 10px
        border-radius 50%
        background white
        position relative
        z-index 3
        transition all 0.18s ease
    &:active
        &::-webkit-slider-thumb
            width 20px
            height 20px
        &::-moz-range-thumb
            width 20px
            height 20px

@media (max-width: $extraSmallMax)
    input[type='range']
        &::-webkit-slider-thumb
            width 35px
            height 35px
        &::-moz-range-thumb
            width 35px
            height 35px