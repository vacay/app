@import '00_variables.styl'
@import 'nib'

#toolbar
    fixed left top bottom
    z-index 10001
    .menu-trigger
        fixed left 10px top 45px
        padding 10px
        border-radius 999em
        z-index 10001
        &:before
        &:after
        span
            background #666
            content ''
            display block
            height 3px
            margin 3px 0
            transition all .2s ease-out
            width 20px
        &:before
            margin-top 2px

    nav
        fixed top 0 left -100px bottom 0
        padding 100px 0 15px
        border-right 1px solid $border
        width 95px
        background white
        ul
            padding 15px 0
            border-bottom 1px solid #ddd
            border-top 1px solid #ddd
            background #fcfcfc
        a
            min-width 45px
            padding 5px 10px
            vertical-align top
            position relative
            font-size 14px
            &.active
                background transparent
                color #444
                font-weight 500

#user-avatar
    margin 20px
    width 45px
    height 45px
    border-radius 999em
    background-size cover !important

#toolbar-title
    fixed left 60px top 45px
    z-index 10002
    line-height 44px
    font-weight 500

.platform-nodewebkit #toolbar-title
    top 6px
    left 0
    right 0
    text-align center
    line-height inherit

body.modal-open #toolbar-title
    display none

.menu-open
    #toolbar
        nav
            left 0

        .menu-trigger
            &:before
                transform rotate(45deg) translate3d(4px,4px,0)
            span
                opacity 0
            &:after
                transform rotate(-45deg) translate3d(4px,-4px,0)

    #toolbar-title
        display none

@media (min-width: $smallMin)
    #toolbar ul
        margin 15px 0

@media (max-width: $extraSmallMax)
    #toolbar
        bottom 60px
        pointer-events none
        text-align center

        nav
            pointer-events auto
            top auto
            left -100%
            bottom 60px
            width 100%
            padding 0
            border-top 1px solid $border
            border-right none
            li
                width 20%
                display inline-block

        .menu-trigger
            pointer-events auto
            top auto
            bottom 5px
            &:before
            &:after
            span
                background white
        a
            min-height 45px
            line-height 35px

        li + li:before
        a + a:before
            content ""
            absolute top left bottom
            border-left 1px solid $border

    body.menu-open #toolbar
        right 0
        background rgba(0,0,0,0.6)
        width 100% !important

    #user-icon
        display flex
        padding 5px 0
        a
            flex 1

    #toolbar-title
        top 2px
        left 0
        right 0
        text-align center

    body.player-open
        .menu-trigger
        #toolbar-title
            display none