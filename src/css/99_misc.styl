@import '00_variables.styl'
@import 'nib'

.cf
    &:before
    &:after
        content " "
        display table
    &:after
        clear both

.bookmarklet
    background-color #f6f6f6
    border-radius 5px
    padding 5px 10px
    display inline-block
    cursor move
    border 1px solid $border

.close:before
    absolute top left
    content '\0000D7'
    font-size 45px
    font-weight 100
    width 45px
    height 45px

.delete:before
    absolute top left
    content '\0000D7'
    background $red
    width 100%
    height 100%
    border-radius 999em
    line-height 16px
    border 6px solid white
    color white

.pull-right
    float right

.scroll
    overflow-x hidden
    overflow-y auto
    -webkit-overflow-scrolling touch

.cursor
a
button
    cursor pointer

.t
    .o
        display none
    &[data-active='true']
        .o
            display block
        .f
            display none

body.mobile .hide-mobile
    display none

.tip
    font-size 11px
    color rgba(0,0,0,0.6)
    &:before
        content 'Tip: '
        font-weight 900