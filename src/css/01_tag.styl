@import '00_variables.styl'
@import 'nib'

.tag
    position relative
    color rgba(0,0,0,0.44)
    background #fafafa
    font-size 13px
    font-weight 400
    margin 0 8px 8px 0
    display inline-block
    border 1px solid #ddd
    border-bottom-color #ccc
    border-radius 3px
    box-shadow inset 0 1px 0 #fff, 0 1px 5px #f1f1f1
    &.active
        font-weight 900

.tag a
a.tag
    padding 4px 5px
    display inline-block

.tags
    input
        display inline-block
        min-width 66px
        width auto
        padding 0
    .remove
        border-left 1px solid $border

.tag.active
.mouse .tag:hover
    color $grey
    border-color rgba(211,228,120,0.9)
    background rgba(211,228,120,0.1)

.mouse .remove:hover
    color $red
