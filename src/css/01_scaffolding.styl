@import '00_variables.styl'
@import 'nib'

html
    height 100%
    width 100%
    overflow hidden
    text-size-adjust 100%

body
    position relative
    font-family 'Helvetica Neue Light','Helvetica Neue',Helvetica,Arial,'Lucida Grande',sans-serif
    font-size 14px
    font-weight 300
    color $text
    height 100%
    width 100%
    overflow hidden

main
    absolute top right bottom left
    background-color $bg
    height 100%
    overflow hidden

.authenticated main
    padding 35px 10px

.u
    position relative
    margin 0 auto

    &.u720
        max-width 720px

    &.u850
        max-width 850px

header
    text-align center
    padding 30px 0

@media (min-width: $smallMin)
    .authenticated main
        right 65px
        border-right 1px solid $border

@media (max-width: $extraSmallMax)
    .authenticated main
        padding-bottom 100px
