@import '00_variables.styl'

#landing
    display table
    position absolute
    padding 0
    width 100%
    height 100%
    z-index 100
    background black
    background-position center
    background-size cover
    text-align center
    color rgba(255,255,255,.5)
    video
        position absolute
        z-index -1
    form
        position relative
        max-width 350px
        width 90%
        margin 0 auto
        z-index 1
    .i-header
        width 100%
        background rgba(255,255,255,.8)
        color rgba(5,5,5,.9)
        margin-bottom 1px
    .brand
        font-size 5em
        line-height 1.5em
        font-weight 100
    .inputs
        margin-bottom 50px
    input
    .submit
        width 100%
        border none
        margin-bottom 1px
        padding 10px 20px
        background rgba(255,255,255,.1)
        ::-webkit-input-placeholder
            color rgba(255,255,255,.5)
        &:first-child
            border-radius 2px 2px 0 0
        &:last-child
            border-radius 0 0 2px 2px
            margin-bottom none
        &.disabled
            color #444
            cursor not-allowed

.volume-controls
    font-size 21px
    line-height 40px
    position absolute
    text-align right
    padding-right 18px
    right 0
    top 8px
    z-index 3

.auth-container
    display table-cell
    vertical-align middle
    .signin
    .signup
    .request
    .reset
    .invite
        display none
    &[data-type='signin'] .signin
    &[data-type='signup'] .signup
    &[data-type='request'] .request
        display inline-block

.auth-container button
    border-color rgba(255,255,255,0.3)
    color rgba(255,255,255,0.3)

.mouse .auth-container button:hover
    border-color rgba(255,255,255,0.5)
    color rgba(255,255,255,0.9)

.auth-message
    height 22px
    line-height 22px
    padding 0 5px
    border-radius 2px
    margin-bottom 20px
    visibility hidden
    background rgba(204,17,0,0.5)
    &:not(:empty)
        visibility visible

@media (max-width: $extraSmallMax)
    video
    .volume-controls
        display none
