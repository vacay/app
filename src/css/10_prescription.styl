@import '00_variables.styl'
@import 'nib'

#new-draft
    background #fafafa
    border-bottom 1px solid $border

.prescription
    a.i-image
        background-position center
        background-size cover
        height 400px
    .description
        min-height 19px
        padding 5px 25px
        line-height 1.42857
    .description[contenteditable='true']
        background yellow
    .recommend
        .active
            display none
        &.active
            .active
                display inline-block
            .inactive
                display none
    .save
        display none
    .editable .save
        display inline-block

    .list
        border-top 1px solid $border
    &.simple
        .list
            display none

.o-actions
    padding 10px 0
    margin 0 25px
    border-bottom 1px solid $border
    text-align right

.p-actions
    padding 10px 25px
    .avatar
        display inline-block
        margin-right 5px
        img
            width 30px
            height 30px
    &:empty
        display none