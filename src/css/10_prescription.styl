@import '00_variables.styl'
@import 'nib'

#prescription
    margin-top 30px

.prescription
    .recommendations
        padding 5px 15px 10px
        text-align right
        .avatar
            display inline-block
            margin-right 5px
            img
                width 30px
                height 30px
    a.i-image
        background-position center
        background-size cover
        height 400px
    .description
        min-height 19px
        padding 0 15px
        line-height 1.42857
    .description[contenteditable='true']
        background yellow
    .recommend
        .active
            display none
        &.active
            .active
                display inline-block
            .inactive
                display none
    .save
        display none
    .editable .save
        display inline-block

    &.simple
        .l-actions
        .list
            display none

.p-actions
    text-align right
    border-top 1px solid $border
    margin 0 15px
    padding 5px 0
    &:empty
        display none