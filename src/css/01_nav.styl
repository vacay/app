@import '00_variables.styl'
@import 'nib'

nav
    width 100%
    font-size 11px
    ul
        padding 0
        margin 0
        display block

    li
        position relative
        display inline-block

    a
        padding 18px 10px        
        text-transform lowercase
        display block
        border none
        &.active
            background $border
            color #444

    &.row
        a
            text-align center
        a:not(:last-child)
            border-right 1px solid $border

    &.vertical
        width auto
        li
            display block
            &:first-child
                margin-top 0

    &.horizontal
        margin-bottom 30px
        white-space nowrap
        overflow hidden
        overflow-x auto
        &:before
            content ""
            display block
            absolute left bottom right
            border-bottom 2px solid $border
        li
            vertical-align middle
        a
            border-bottom 2px solid transparent
        a.active
            font-weight 900
            border-bottom 2px solid #666

    &.horizontal-pill
        a
            padding 5px 10px
            border-radius 10px
            border 1px solid transparent
        a.active
            background white
            font-weight 900
            border-color $border

    &.flex
        li a
            padding 10px

        .badge
            font-weight 600

    &.justified
        overflow visible
        ul
            width 100%
            display table
        li
            display table-cell
            width 1%
            text-align center

    &.light
        background-color #fcfcfc
        a
            border none
        a.active
            border none
            background-color $border

    &.dark
        background-color #191918
        a.active
            color white

[class*="-trigger"]
    cursor pointer
    border 2px solid transparent
    &.active
    &:hover
        border-color $border

.mouse
    nav
        a:hover
            background $border
            color #444
        &.dark a:hover
            color white

@media (max-width: 63em)
    nav .label
        display block
        padding-bottom 5px
    nav.row .col-xs-3:nth-child(4)
        border-right none
    nav.row .col-xs-3:nth-child(-n+4)
        border-bottom 1px solid $border    