@import '00_variables.styl'
@import 'nib'

.mouse .i:hover
    a
        color blue
        text-decoration underline

.mouse .list > .i:hover:not(.i-clear)
    background-color #fcfcfc

.i
    position relative
    display block
    background white
    padding 15px

    &.i-clear
        background transparent

    &:before
    &:after
        content " "
        display table
    &:after
        clear both

    .left
        absolute top left

    .right
        absolute top 15px right 15px

    &.selected
        background-color yellow !important

.i-image
    padding 0

.i-title
    display block

.i-body
    display block
    word-wrap break-word

.i-divider
    height 30px

.i-left .i-body
    margin-left 55px
    min-height 30px

.i-right .i-body
    padding-right 140px

.i-select
    absolute bottom 5px right 0

.i-handle
    display inline-block
    vertical-align middle
    width 25px
    height 30px
    background-image repeating-radial-gradient(center center, rgba(0,0,0,.2), rgba(0,0,0,.2) 1px, transparent 1px, transparent 100%)
    background-size 3px 3px
    cursor move
