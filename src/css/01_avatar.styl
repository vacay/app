@import '00_variables.styl'
@import 'nib'

.avatar
    display inline-block
    background-position center
    padding 0
    line-height 0
    background-size cover
    border none
    img
        background-color $border
        width 30px
        height 30px
        border-radius 999em

@media (max-width: $extraSmallMax)
    .avatar img
        width 45px
        height 45px