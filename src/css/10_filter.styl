@import '00_variables.styl'
@import 'nib'

.filter-container
    min-height 34px
    margin-bottom 25px

    input
        margin 0

    nav
        padding 10px 0

    .reset
        display none

    .filters
        display none

    .tags
        padding 10px

    &.show
        .icon
            background white
            border 1px solid $border
            border-radius 999em
        .reset
            display inline-block
        .filters
            display block