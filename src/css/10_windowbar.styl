@import '00_variables.styl'
@import 'nib'

#windowbar
    fixed top left right
    display none
    height 25px
    padding 5px
    -webkit-user-select none
    -webkit-app-region drag
    cursor move
    z-index 10003
    background white
    button
        width 15px
        height 15px
        padding 0
        border-radius 100%

body.native
    #windowbar
        display block
    &.mobile #windowbar
        height 45px
        button
            width 35px
            height 35px
            line-height 0

#exit
    background $red

#minimize
    background $orange

#maximize
    background $green

#version
    color #c8c8c8
    fixed right 10px top 5px

#back
    border 1px solid $border
    line-height 35px

#forward
    border 1px solid $border
    line-height 35px

@media (max-width: $extraSmallMax)
    body.native.player-open #windowbar
        top -45px
