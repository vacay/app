@import '00_variables.styl'
@import 'nib'

#live
    fixed top 360px right 10px
    width 45px
    z-index 5
    &:empty + #live-icon
        display none

#live-icon
    fixed top 295px right 10px
    width 45px
    height 45px
    z-index 5
    &:before
        content '\2022\00a0LIVE'
        text-align center
        display block
        font-size 10px
        line-height 45px
        color $red
    .badge
        display none
        absolute top -4px right -11px
        width 20px
        height 20px
        border-radius 100%
        font-size 10px
        background white
        border 1px solid $bg
        border 1px solid #f0f0f0
        line-height 13px
        text-align center

@media (max-width: $extraSmallMax)
    #live-icon
        top 30px
        border-radius 999em
        background $red
        &:before
            color white
        .badge
            display block
    #live
        top 85px
        display none
    .show-live #live
        display block
        
